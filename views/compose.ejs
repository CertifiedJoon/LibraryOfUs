<h1 style="color:#1abc9c">Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" name="postTitle" size="150">
  </div>
  <div class="form-group">
    <label>Text</label>
    <textarea class="form-control" name="postText" cols="150" rows="10"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

